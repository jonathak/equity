<table align="center">
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><b><%= company.name %></b></td>
    <td><%= link_to 'show direct investments', "#", :class => "company_expand", 'data-id' => "\#company_list_hidden_#{company.id}" %> . </td>
    <td><%= link_to "manage ownership of #{company.name}", company %> . </td>
    <td><%= link_to 'rename', edit_company_path(company) %> . </td>
    <td><%= link_to 'delete', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <tbody class="company_list_hidden" id="company_list_hidden_<%= company.id %>">
	<% company.directs.each do |d| %>
	  <tr><td></td><td colspan=4><%= "#{d.c.name}"%></td></tr>
	<% end %>
	<tr>
		<td></td>
		<td colspan=4 class="newinvite"><%= link_to "(add ownership stake)", "invitations/new?company_id=#{company.id}" %>
		<% if company.directs.count > 0 %>
		  <%= link_to "(show indirect investments)", "#" %>
		<% end %>
		</td>
	<tr>
  </tbody>
<% end %>
</table>

